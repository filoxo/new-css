{
  "name": "new-css",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/main.min.css",
  "files": [
    "dist/main.min.css",
    "src/main.css"
  ],
  "dependencies": {
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2"
  },
  "devDependencies": {
    "lr-http-server": "^0.1.5",
    "npm-run-all": "^4.1.1"
  },
  "scripts": {
    "build": "postcss 'src/main.css' -o 'dist/main.min.css'",
    "build:watch": "npm run build -- -w",
    "prepublishOnly": "npm run build",
    "serve": "lr-http-server",
    "start": "npm-run-all -p build:watch serve"
  }
}
